extends layout

block content
    div.container
        table(style="width: 100%; margin-top: 30px")
            tr
                td(style="width: 30%; vertical-align: top")
                    p Welcome #{user.name}
                    p Organization: #{user.company}
                    p Website:
                    a(href="#{user.site}") #{user.site}
                    p Tutorials Improved: #{num_tutorials} tutorials
                    p Tutorials Contributed: #{num_contributions} times
                td(style="vertical-align: top")
                    h3(style="margin-top: 0px; padding-top: 0px") My Tutorials
                    each tutorial in tutorials
                        a(href="/tutorial/#{tutorial._id}")
                            div
                                p #{tutorial.name}
                                p #{tutorial.description}
