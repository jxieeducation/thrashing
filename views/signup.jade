extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Sign up
          div.account-wall
            form(class='form-signup', action='/signup', method='POST')
              input(type='text', name='email' class='form-control', placeholder='email: larry@gmail.com',required, autofocus)
              input(type='password', name='password' class='form-control', placeholder='password: Stanfurd', required)

              button(class='btn btn-lg btn-primary btn-block', type='submit') Sign up
              span.clearfix
          a(href='/signin', class='text-center new-account') Already have an account
          #message
          if message
            h1.text-center.error-message #{message}
