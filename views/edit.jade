extends layout

block content
	div(style="margin-left:150px;")
		form(name="create tutorial", action="/edit/#{tutorial._id}", method="post")
			p name of the tutorial
			input(type="text", name="name", value="#{tutorial.name}")
			p description
			input(type="text", name="description", style="width:400px;", value="#{tutorial.description}")
			p content
			textarea(name="content", data-provide="markdown", style="width:400px; height:200px;", row="5") #{tutorial.content}
			p
			input(type="submit", value="edit")
